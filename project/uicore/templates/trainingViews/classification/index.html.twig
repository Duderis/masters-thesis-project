<div class="teachingActions__mainBlock">
    <h3>Train Classification Neural Network</h3>
    {% if not classificationForm.vars.valid %}
        <div class="ui negative message">
            {{ form_errors(classificationForm.iterationNum) }}
        </div>
    {% endif %}
    <form class="ui form" method="post">
        <div class="ui inverted segment">
            <div class="ui inverted accordion">
                <div class="title">
                    Detailed options
                    <i class="dropdown icon"></i>
                </div>
                <div class="content">
                    <p class="transition hidden">Currently not implemented</p>
                </div>
            </div>
        </div>
        <div style="display: flex; justify-content: flex-end">
            {{ form_row(classificationForm.submit, { 'label': 'Train', 'attr': {'class': 'ui orange button'} }) }}
            {{ form_row(classificationForm._token) }}
        </div>
    </form>
</div>